# =============================================================================
# EditorConfig - Consistent coding styles across editors
# =============================================================================
# Documentation: https://editorconfig.org
#
# Supported by most editors and IDEs including:
# - VS Code (with extension)
# - PyCharm (built-in)
# - Sublime Text (with plugin)
# - Vim (with plugin)
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default settings for all files
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =============================================================================
# Python files
# =============================================================================
[*.py]
indent_size = 4
max_line_length = 100

# =============================================================================
# Web files (JS, CSS, HTML)
# =============================================================================
[*.{js,jsx,ts,tsx,css,scss,html}]
indent_size = 2

# =============================================================================
# Data files
# =============================================================================
[*.{json,yml,yaml}]
indent_size = 2

# =============================================================================
# Documentation
# =============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# =============================================================================
# Makefile (requires tabs)
# =============================================================================
[Makefile]
indent_style = tab

# =============================================================================
# Shell scripts
# =============================================================================
[*.sh]
indent_size = 2

# =============================================================================
# Docker files
# =============================================================================
[Dockerfile]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# =============================================================================
# Git files
# =============================================================================
[.gitignore]
indent_size = 2

# =============================================================================
# Config files
# =============================================================================
[*.{toml,ini,cfg}]
indent_size = 4

[*.env*]
indent_size = 4
